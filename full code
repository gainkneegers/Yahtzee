            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)
            MsgBox("Sucess! Next Round.")
            btnThrees.Enabled = False
            intTimesRolled = 0
            timesrolled.Text = 0
        ElseIf threesScore = 0 And MsgBox("This Will Give you 0 Points, Would you like to continue?", MessageBoxButtons.YesNo, MessageBoxIcon.Question) = MsgBoxResult.Yes Then
            btnThrees.Enabled = False
            MsgBox("NEXT TURN")
            intTimesRolled = 0
            timesrolled.Text = 0
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)

        End If


        blnHasEnteredScore = True
        lblThreesVALUE.Text = threesScore
    End Sub

    Private Sub btnFives_Click(sender As Object, e As EventArgs) Handles btnFives.Click
        If btnRoller.Enabled = False Then
