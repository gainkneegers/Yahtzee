    Private Sub btnSmallStraight_Click(sender As Object, e As EventArgs) Handles btnSmallStraight.Click
        Dim smallstraight(4) As Integer
        smallstraight(0) = lblDice1counter.Text
        smallstraight(1) = lblDice2counter.Text
        smallstraight(2) = lblDice3counter.Text                         'same thing as large straight however has 2 if statements because there is one more combination
        smallstraight(3) = lblDice4counter.Text
        smallstraight(4) = lblDice5counter.Text
        Array.Sort(smallstraight)

        If smallstraight(1) = smallstraight(0) + 1 And smallstraight(2) = smallstraight(1) + 1 And smallstraight(3) = smallstraight(2) + 1 Then
            lblsmallstraightVALUE.Text = 25
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)
            MsgBox("Sucess! Next Round.")
            btnSmallStraight.Enabled = False
            intTimesRolled = 0
            timesrolled.Text = 0
        ElseIf smallstraight(2) = smallstraight(1) + 1 And smallstraight(3) = smallstraight(2) + 1 And smallstraight(4) = smallstraight(3) + 1 Then
            lblsmallstraightVALUE.Text = 25
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)
            MsgBox("Sucess! Next Round.")
            btnSmallStraight.Enabled = False
            intTimesRolled = 0
            timesrolled.Text = 0
        Else
            If MsgBox("This Will Give you 0 Points, Would you like to continue?", MessageBoxButtons.YesNo, MessageBoxIcon.Question) = MsgBoxResult.Yes Then
                lblsmallstraightVALUE.Text = 0
                MsgBox("NEXT TURN")
                picDice1.Image = imlDice.Images.Item(dice1)
                picDice2.Image = imlDice.Images.Item(dice1)
                picDice3.Image = imlDice.Images.Item(dice1)
                picDice4.Image = imlDice.Images.Item(dice1)
                picDice5.Image = imlDice.Images.Item(dice1)
                intTimesRolled = 0
                timesrolled.Text = 0
                btnSmallStraight.Enabled = False
            End If
        End If


    End Sub
    Private Sub btnYahtzeeBonus_Click(sender As Object, e As EventArgs) Handles btnYahtzeeBonus.Click


        If (lblDice1counter.Text = lblDice2counter.Text And lblDice2counter.Text = lblDice3counter.Text And lblDice3counter.Text = lblDice4counter.Text And lblDice4counter.Text = lblDice5counter.Text) And lblyahtzeeVALUE.Text > 5 Then
            MsgBox("Pick a Score to BURN")
            tmrYahtzeeBonus.Enabled = False
            tmrYahtzeeBonus.Stop()
            ck3ofkind.Visible = True
            ck4ofkind.Visible = True                    'identifes if yahtzee was already used and if player has a second yahtzee 
            ckfullhouse.Visible = True
            cksstraight.Visible = True                              'if so it shows the burning options and disables the scoring buttons to prevent glitches
            cklstraight.Visible = True
            ckchance.Visible = True

            btnYahtzeeBonus.Enabled = False
            btnRoller.Visible = False
            btnAces.Enabled = False
            btnTwos.Enabled = False
            btnThrees.Enabled = False
            btnFours.Enabled = False
            btnFives.Enabled = False
            btnSixes.Enabled = False
            btn3ofKind.Enabled = False
            btn4ofakind.Enabled = False
            btnSmallStraight.Enabled = False
            btnLargeStraight.Enabled = False
            btnChance.Enabled = False
            btnFullHouse.Enabled = False
            btnThrees.Enabled = False
            btnYAHTZEE.Enabled = False
        ElseIf MsgBox("This Will Give you 0 Points, Would you like to continue?", MessageBoxButtons.YesNo, MessageBoxIcon.Question) = MsgBoxResult.Yes Then
            MsgBox("NEXT TURN")
            intTimesRolled = 0
            timesrolled.Text = 0
            btnYahtzeeBonus.Enabled = False
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)


        End If
    End Sub
    Private Sub ck3ofkind_CheckedChanged(sender As Object, e As EventArgs) Handles ck3ofkind.CheckedChanged
        MsgBox("Burnt 3 Of a Kind + Bonus 80 Points")
        lblTotalVALUE.Text = Val(lblTotalVALUE.Text) - Val(lbl3ofkindVALUE.Text)
        lbl3ofkindVALUE.Text = 0
        lblyahtzeebonusVALUE.Text = 80
        ck3ofkind.Visible = False
        ck4ofkind.Visible = False
        ckfullhouse.Visible = False
        cksstraight.Visible = False
        cklstraight.Visible = False                                 'identifies if the player selected to burn 3 of a kind and if so it updates total, makes the burning options disapear, and reenables all the scores EXCEPT the ones that were already used

        ckchance.Visible = False
        MsgBox("NEXT TURN")
        intTimesRolled = 0
        timesrolled.Text = 0
        btn3ofKind.Enabled = False
        picDice1.Image = imlDice.Images.Item(dice1)
        picDice2.Image = imlDice.Images.Item(dice1)
        picDice3.Image = imlDice.Images.Item(dice1)
        picDice4.Image = imlDice.Images.Item(dice1)
        picDice5.Image = imlDice.Images.Item(dice1)
        If lblAcesVALUE.Text = 0 Then
            btnAces.Enabled = True
        End If
        If lblTwosVALUE.Text = 0 Then
            btnAces.Enabled = True
        End If
        If lblThreesVALUE.Text = 0 Then
            btnThrees.Enabled = True
        End If
        If lblFoursVALUE.Text = 0 Then
            btnFours.Enabled = True
        End If
        If lblFivesVALUE.Text = 0 Then
            btnFives.Enabled = True
        End If
        If lblSixesVALUE.Text = 0 Then
            btnSixes.Enabled = True
        End If

        If lbl4ofkindVALUE.Text = 0 Then
            btn4ofakind.Enabled = True
        End If
        If lblsmallstraightVALUE.Text = 0 Then
            btnSmallStraight.Enabled = True
        End If
        If lblLargestraightVALUE.Text = 0 Then
            btnLargeStraight.Enabled = True
        End If
        If lblFullhouseVALUE.Text = 0 Then
            btnFullHouse.Enabled = True
        End If
        If lblChanceVALUE.Text = 0 Then
            btnChance.Enabled = True
        End If
        btnRoller.Visible = True
        btn3ofKind.Text = "Burnt"
    End Sub

    Private Sub tmrYahtzeeBonus_Tick(sender As Object, e As EventArgs) Handles tmrYahtzeeBonus.Tick
        ck3ofkind.Visible = False
        ck4ofkind.Visible = False
        ckfullhouse.Visible = False
        cksstraight.Visible = False             'makes the burning options invisible untill yahtzee bonus is selected
        cklstraight.Visible = False
        ckchance.Visible = False

    End Sub

