    Private Sub btnYAHTZEE_Click(sender As Object, e As EventArgs) Handles btnYAHTZEE.Click
        If btnRoller.Enabled = False Then
            btnRoller.Enabled = True
        End If                 'same as others
        If lblDice1counter.Text = lblDice2counter.Text And lblDice2counter.Text = lblDice3counter.Text And lblDice3counter.Text = lblDice4counter.Text And lblDice4counter.Text = lblDice5counter.Text Then
            lblyahtzeeVALUE.Text = 45
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)
            MsgBox("Sucess! Next Round.")
            btnYAHTZEE.Enabled = False
            intTimesRolled = 0
            timesrolled.Text = 0

        Else
            If MsgBox("This Will Give you 0 Points, Would you like to continue?", MessageBoxButtons.YesNo, MessageBoxIcon.Question) = MsgBoxResult.Yes Then
                MsgBox("NEXT TURN")
                picDice1.Image = imlDice.Images.Item(dice1)
                picDice2.Image = imlDice.Images.Item(dice1)
                picDice3.Image = imlDice.Images.Item(dice1)
                picDice4.Image = imlDice.Images.Item(dice1)
                picDice5.Image = imlDice.Images.Item(dice1)
                intTimesRolled = 0
                timesrolled.Text = 0
                btnYAHTZEE.Enabled = False
            End If
        End If
    End Sub






    Private Sub btnLargeStraight_Click(sender As Object, e As EventArgs) Handles btnLargeStraight.Click
        If btnRoller.Enabled = False Then
            btnRoller.Enabled = True
        End If
        LargeStraight(0) = lblDice1counter.Text
        LargeStraight(1) = lblDice2counter.Text
        LargeStraight(2) = lblDice3counter.Text         'makes the variables equal to dice
        LargeStraight(3) = lblDice4counter.Text
        LargeStraight(4) = lblDice5counter.Text
        Array.Sort(LargeStraight)                               'sorts the numbers
        If LargeStraight(1) = LargeStraight(0) + 1 And LargeStraight(2) = LargeStraight(1) + 1 And LargeStraight(3) = LargeStraight(2) + 1 And LargeStraight(4) = LargeStraight(3) + 1 Then

            lblLargestraightVALUE.Text = 30

            'if the numbers are sorted properly then give points







            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)
            MsgBox("Sucess! Next Round.")
            btnLargeStraight.Enabled = False
            intTimesRolled = 0
            timesrolled.Text = 0
        Else
            If MsgBox("This Will Give you 0 Points, Would you like to continue?", MessageBoxButtons.YesNo, MessageBoxIcon.Question) = MsgBoxResult.Yes Then
                MsgBox("NEXT TURN")
                intTimesRolled = 0
                timesrolled.Text = 0

                picDice1.Image = imlDice.Images.Item(dice1)
                picDice2.Image = imlDice.Images.Item(dice1)
                picDice3.Image = imlDice.Images.Item(dice1)
                picDice4.Image = imlDice.Images.Item(dice1)
                picDice5.Image = imlDice.Images.Item(dice1)
                btnLargeStraight.Enabled = False
            End If
        End If
    End Sub

    Private Sub btnEndGame_Click(sender As Object, e As EventArgs) Handles btnEndGame.Click
        'when clicked the user is asked to enter name to save and also stops the game
        If MsgBox("Would You Like to Save your Score?", MessageBoxButtons.YesNo, MessageBoxIcon.Question) = MsgBoxResult.Yes Then
            username = InputBox("Player name?", "Name", , , )
            MsgBox("Saved, Check Leaderboard for Score")
            btnRoller.Visible = False
            btnAces.Enabled = False
            btnTwos.Enabled = False
            btnThrees.Enabled = False
            btnFours.Enabled = False
            btnFives.Enabled = False
            btnSixes.Enabled = False
            btn3ofKind.Enabled = False
            btn4ofakind.Enabled = False
            btnSmallStraight.Enabled = False
            btnLargeStraight.Enabled = False
            btnChance.Enabled = False
            btnFullHouse.Enabled = False
            btnThrees.Enabled = False
            btnYAHTZEE.Enabled = False
            btnYahtzeeBonus.Enabled = False
            btnHoldD1.Enabled = False
            btnHoldD2.Enabled = False
            btnHoldD3.Enabled = False
            btnHoldD4.Enabled = False
            btnHoldD5.Enabled = False
            btnRULES.Enabled = False
            btnEndGame.Enabled = False
            btnexit.Visible = True
            tmrScoreTracker.Enabled = False
        Else

            MsgBox("Ok Bye.")
            Application.Exit()     'if player doesn't enter name then goodbye
        End If


    End Sub

    Private Sub btnHighScores_Click(sender As Object, e As EventArgs) Handles btnHighScores.Click
        If username IsNot Nothing Then            'shows player name and score
            MsgBox(username & "'s Score is = " & lblTotalVALUE.Text, MsgBoxStyle.Information, "Take Screenshot To Save")
        Else
            MsgBox("Player hasn't entred name, please End Game and Save")
        End If
    End Sub

    Private Sub btnexit_Click(sender As Object, e As EventArgs) Handles btnexit.Click
        Application.Exit()
    End Sub

