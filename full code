        If vardie3lockedstatus = True Then
            vardie3lockedstatus = False
        Else
            vardie3lockedstatus = True
        End If


    End Sub

    Private Sub btnHoldD4_Click(sender As Object, e As EventArgs) Handles btnHoldD4.Click                  'same as dice1
