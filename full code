    Private Sub tmrTime_Tick(sender As Object, e As EventArgs) Handles tmrTime.Tick
        If vardie1lockedstatus = False Then             ' shows dice1 value as number
            counter1 += 1
            If counter1 = 20 Then
                tmrTime.Enabled = False
                counter1 = 0

            End If

            If counter1 > 0 Then
                lblDice1counter.Text = 0
            ElseIf counter1 = 0 Then
                lblDice1counter.Text = dice1 + 1

            End If
            picDice1.Image = imlDice.Images.Item(dice1)
            random = New Random

            dice1 = random.Next(0, 6)                     'randomizes the dice


        End If
    End Sub







    Private Sub tmrTime2_Tick(sender As Object, e As EventArgs) Handles tmrTime2.Tick
        If vardie2lockedstatus = False Then                           'same as dice1
            counter2 += 1
            If counter2 = 12 Then
                tmrTime2.Enabled = False
                counter2 = 0
                lblDice2counter.Text = dice2
            End If
            random = New Random
            dice2 = random.Next(0, 6)
            randomnum2 = lblDice2counter.Text
            If counter2 > 0 Then
                lblDice2counter.Text = 0
            ElseIf counter2 = 0 Then
                lblDice2counter.Text = dice2 + 1

            End If
            picDice2.Image = imlDice.Images.Item(dice2)
        End If
    End Sub






    Private Sub tmrTimer3_Tick(sender As Object, e As EventArgs) Handles tmrTimer3.Tick
        If vardie3lockedstatus = False Then                             'same as dice1
            counter3 += 1
            If counter3 = 17 Then
                tmrTimer3.Enabled = False
                counter3 = 0
                lblDice3counter.Text = dice3
            End If
            random = New Random
            dice3 = random.Next(0, 6)

            If counter3 > 0 Then
                lblDice3counter.Text = 0
            ElseIf counter3 = 0 Then
                lblDice3counter.Text = dice3 + 1
            End If
            picDice3.Image = imlDice.Images.Item(dice3)
        End If
    End Sub








    Private Sub tmrTime4_Tick(sender As Object, e As EventArgs) Handles tmrTime4.Tick
        If vardie4lockedstatus = False Then                                     'same as dice1
            counter4 += 1
            If counter4 = 13 Then
                tmrTime4.Enabled = False
                counter4 = 0
                lblDice4counter.Text = dice4
            End If
            random = New Random
            dice4 = random.Next(0, 6)

            If counter4 > 0 Then
                lblDice4counter.Text = 0
            ElseIf counter4 = 0 Then
                lblDice4counter.Text = dice4 + 1

            End If

            picDice4.Image = imlDice.Images.Item(dice4)
        End If
    End Sub








    Private Sub tmrTime5_Tick(sender As Object, e As EventArgs) Handles tmrTime5.Tick
        If vardie5lockedstatus = False Then                                     'same as dice1
            counter5 += 1
            If counter5 = 15 Then
                tmrTime5.Enabled = False
                counter5 = 0
                lblDice5counter.Text = dice5
            End If

            random = New Random

            dice5 = random.Next(0, 6)


            If counter5 > 0 Then
                lblDice5counter.Text = 0
            ElseIf counter5 = 0 Then
                lblDice5counter.Text = dice5 + 1
            End If
            picDice5.Image = imlDice.Images.Item(dice5)
        End If
    End Sub



































    Public Sub btnAces_Click(sender As Object, e As EventArgs) Handles btnAces.Click
        If btnRoller.Enabled = False Then      'disables and enables the roller
            btnRoller.Enabled = True
        End If



        If lblDice1counter.Text = 1 Then                        'read and save if any of the dice are equal to 1
            AcesScore += 1
        End If
        If lblDice2counter.Text = 1 Then
            AcesScore += 1
        End If
        If lblDice3counter.Text = 1 Then
            AcesScore += 1
        End If
        If lblDice4counter.Text = 1 Then
            AcesScore += 1
        End If
        If lblDice5counter.Text = 1 Then
            AcesScore += 1
        End If
        If AcesScore >= 1 Then
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)             'resets the round and give a message
            MsgBox("Sucess! Next Round.")
            btnAces.Enabled = False
            intTimesRolled = 0
            timesrolled.Text = 0
        ElseIf AcesScore = 0 And MsgBox("This Will Give you 0 Points, Would you like to continue?", MessageBoxButtons.YesNo, MessageBoxIcon.Question) = MsgBoxResult.Yes Then
            MsgBox("NEXT TURN")
            btnAces.Enabled = False
            intTimesRolled = 0
            timesrolled.Text = 0                             'asks the user if they want to continou with 0 points and if so they reset the round
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)

        End If


        blnHasEnteredScore = True
        lblAcesVALUE.Text = AcesScore

    End Sub

    Private Sub btnChance_Click(sender As Object, e As EventArgs) Handles btnChance.Click
        If btnRoller.Enabled = False Then
            btnRoller.Enabled = True
        End If
        Chances = (CDbl(lblDice1counter.Text) + CDbl(lblDice2counter.Text) + CDbl(lblDice3counter.Text) + CDbl(lblDice4counter.Text) + CDbl(lblDice5counter.Text)).ToString
        lblChanceVALUE.Text = Chances
        intTimesRolled = 0
        timesrolled.Text = 0
        picDice1.Image = imlDice.Images.Item(dice1)                           'adds the dice together shows it and also disables the button and reset images
        picDice2.Image = imlDice.Images.Item(dice1)
        picDice3.Image = imlDice.Images.Item(dice1)
        picDice4.Image = imlDice.Images.Item(dice1)
        picDice5.Image = imlDice.Images.Item(dice1)
        MsgBox("Sucess! Next Round.")

        btnChance.Enabled = False
    End Sub

    Private Sub btnTwos_Click(sender As Object, e As EventArgs) Handles btnTwos.Click
        If btnRoller.Enabled = False Then
            btnRoller.Enabled = True
        End If                                         'same as aces


        If lblDice1counter.Text = 2 Then
            twosScore += 2
        End If
        If lblDice2counter.Text = 2 Then
            twosScore += 2
        End If
        If lblDice3counter.Text = 2 Then
            twosScore += 2
        End If
        If lblDice4counter.Text = 2 Then
            twosScore += 2
        End If
        If lblDice5counter.Text = 2 Then
            twosScore += 2
        End If
        If twosScore > 1 Then
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)
            MsgBox("Sucess! Next Round.")
            btnTwos.Enabled = False
            intTimesRolled = 0
            timesrolled.Text = 0
        ElseIf twosScore = 0 And MsgBox("This Will Give you 0 Points, Would you like to continue?", MessageBoxButtons.YesNo, MessageBoxIcon.Question) = MsgBoxResult.Yes Then
            btnTwos.Enabled = False
            MsgBox("NEXT TURN")
            intTimesRolled = 0
            timesrolled.Text = 0
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)

        End If


        blnHasEnteredScore = True
        lblTwosVALUE.Text = twosScore
    End Sub

    Private Sub btnThrees_Click(sender As Object, e As EventArgs) Handles btnThrees.Click
        If btnRoller.Enabled = False Then
            btnRoller.Enabled = True
        End If
        'same as threes

        If lblDice1counter.Text = 3 Then
            threesScore += 3
        End If
        If lblDice2counter.Text = 3 Then
            threesScore += 3
        End If
        If lblDice3counter.Text = 3 Then
            threesScore += 3
        End If
        If lblDice4counter.Text = 3 Then
            threesScore += 3
        End If
        If lblDice5counter.Text = 3 Then
            threesScore += 3
        End If
