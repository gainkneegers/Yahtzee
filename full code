    Private Sub btnSixes_Click(sender As Object, e As EventArgs) Handles btnSixes.Click
        If btnRoller.Enabled = False Then
            btnRoller.Enabled = True
        End If
        'same as aces

        If lblDice1counter.Text = 6 Then
            sixesScore += 6
        End If
        If lblDice2counter.Text = 6 Then
            sixesScore += 6
        End If
        If lblDice3counter.Text = 6 Then
            sixesScore += 6
        End If
        If lblDice4counter.Text = 6 Then
            sixesScore += 6
        End If
        If lblDice5counter.Text = 6 Then
            sixesScore += 6
        End If
        If sixesScore > 1 Then
            btnSixes.Enabled = False
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)
            MsgBox("Sucess! Next Round.")
            intTimesRolled = 0
            timesrolled.Text = 0
        ElseIf sixesScore = 0 And MsgBox("This Will Give you 0 Points, Would you like to continue?", MessageBoxButtons.YesNo, MessageBoxIcon.Question) = MsgBoxResult.Yes Then
            MsgBox("NEXT TURN")
            btnSixes.Enabled = False
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)
            intTimesRolled = 0
            timesrolled.Text = 0


        End If


        blnHasEnteredScore = True
        lblSixesVALUE.Text = sixesScore
    End Sub

    Private Sub lblUpperTotalLabel_Click(sender As Object, e As EventArgs) Handles lblUpperTotalLabel.Click

    End Sub

    Private Sub tmrScoreTracker_Tick(sender As Object, e As EventArgs) Handles tmrScoreTracker.Tick




        btnexit.Visible = False                             'makes the exit button invisivle untill game is ended
        upperhouseTotal = AcesScore + twosScore + threesScore + foursScore + fivesScore + sixesScore            'counts the uperhouse

        lblUpperTotalVALUE.Text = upperhouseTotal

        If lblUpperTotalVALUE.Text >= 55 Then
            lblBonusVALUE.Text = 50                 'identifies for a bonus and gives it

        End If


        lbllowertotalVALUE.Text = Val(lblChanceVALUE.Text) + Val(lbl3ofkindVALUE.Text) + Val(lbl4ofkindVALUE.Text) + Val(lblsmallstraightVALUE.Text) + Val(lblLargestraightVALUE.Text) + Val(lblyahtzeeVALUE.Text) + Val(lblyahtzeebonusVALUE.Text) + Val(lblFullhouseVALUE.Text)
        lblTotalVALUE.Text = Val(lbllowertotalVALUE.Text) + Val(lblUpperTotalVALUE.Text) + Val(lblBonusVALUE.Text)

        If timesrolled.Text = 0 And btnHoldD1.Text = "Free" Then
            btnHoldD1.PerformClick()
        End If
        If timesrolled.Text = 0 And btnHoldD2.Text = "Free" Then
            btnHoldD2.PerformClick()
        End If
        If timesrolled.Text = 0 And btnHoldD3.Text = "Free" Then
            btnHoldD3.PerformClick()
        End If
        If timesrolled.Text = 0 And btnHoldD4.Text = "Free" Then                        'doesn't allow you to hold the dice when your on 0 rolls
            btnHoldD4.PerformClick()
        End If
        If timesrolled.Text = 0 And btnHoldD5.Text = "Free" Then
            btnHoldD5.PerformClick()
        End If
        If lblUpperTotalVALUE.Text >= 50 Then
            lblBonusVALUE.Text = 55
        End If

        If timesrolled.Text = 0 Then
            btnAces.Visible = False
            btnTwos.Visible = False
            btnThrees.Visible = False
            btnFours.Visible = False
            btnFives.Visible = False
            btnSixes.Visible = False                                'stops buttons from showing when rolling
            btn3ofKind.Visible = False
            btn4ofakind.Visible = False
            btnSmallStraight.Visible = False
            btnLargeStraight.Visible = False
            btnChance.Visible = False
            btnFullHouse.Visible = False
            btnThrees.Visible = False
            btnYAHTZEE.Visible = False
            btnYahtzeeBonus.Visible = False
        ElseIf (vardie5lockedstatus = False And tmrTime5.Enabled = True) Or (vardie4lockedstatus = False And tmrTime4.Enabled = True) Or (vardie3lockedstatus = False And tmrTimer3.Enabled = True) Or (vardie2lockedstatus = False And tmrTime2.Enabled = True) Or (vardie1lockedstatus = False And tmrTime.Enabled = True) Then
            Button1.Visible = False
            btnAces.Visible = False
            btnTwos.Visible = False
            btnThrees.Visible = False
            btnFours.Visible = False
            btnFives.Visible = False
            btnSixes.Visible = False
            btn3ofKind.Visible = False
            btn4ofakind.Visible = False
            btnSmallStraight.Visible = False
            btnLargeStraight.Visible = False
            btnChance.Visible = False
            btnFullHouse.Visible = False
            btnThrees.Visible = False
            btnYAHTZEE.Visible = False
            btnYahtzeeBonus.Visible = False
        Else
            Button1.Visible = True
            btnAces.Visible = True
            btnTwos.Visible = True
            btnThrees.Visible = True
            btnFours.Visible = True
            btnFives.Visible = True
            btnSixes.Visible = True
            btn3ofKind.Visible = True
            btnFullHouse.Visible = True
            btn4ofakind.Visible = True
            btnSmallStraight.Visible = True
            btnLargeStraight.Visible = True
            btnChance.Visible = True
            btnThrees.Visible = True
            btnYAHTZEE.Visible = True
            btnYahtzeeBonus.Visible = True

        End If
        If btnHoldD1.Text = "Free" And btnHoldD2.Text = "Free" And btnHoldD3.Text = "Free" And btnHoldD4.Text = "Free" And btnHoldD5.Text = "Free" Then

            btnHoldD1.PerformClick()
            btnHoldD2.PerformClick()
            btnHoldD3.PerformClick()                      'stops you from holding all dice
            btnHoldD4.PerformClick()
            btnHoldD5.PerformClick()
            MsgBox("Can't Hold All Dice")
        End If
        If timesrolled.Text = 3 Then
            btnRoller.Enabled = False
        Else
            btnRoller.Enabled = True
        End If
        If Button1.Visible = False Then
            btnRoller.Enabled = False
        End If






    End Sub

    Private Sub btnRULES_Click(sender As Object, e As EventArgs) Handles btnRULES.Click
        System.Diagnostics.Process.Start("https://www.hasbro.com/common/instruct/yahtzee.pdf")          'shows help
    End Sub

    Private Sub btn3ofKind_Click(sender As Object, e As EventArgs) Handles btn3ofKind.Click
        If btnRoller.Enabled = False Then
            btnRoller.Enabled = True
        End If

        If lblDice1counter.Text = lblDice2counter.Text And lblDice2counter.Text = lblDice3counter.Text Then
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)
            MsgBox("Sucess! Next Round.")
            intTimesRolled = 0
            timesrolled.Text = 0                                                        'identifies for a 3 of  kind and gives it
            btn3ofKind.Enabled = False
            lbl3ofkindVALUE.Text = Val(lblDice1counter.Text) + Val(lblDice2counter.Text) + Val(lblDice3counter.Text) + Val(lblDice4counter.Text) + Val(lblDice5counter.Text)

        ElseIf lblDice1counter.Text = lblDice2counter.Text And lblDice2counter.Text = lblDice4counter.Text Then
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
