Public Class Form1
    Dim dice1, dice2, dice3, dice4, dice5 As Integer
    Dim counter1 = 0
    Dim counter2 = 0
    Dim counter3 = 0
    Dim counter4 = 0
    Dim counter5 = 0
    Dim vardie1lockedstatus As Boolean = False
    Dim vardie2lockedstatus As Boolean = False
    Dim vardie3lockedstatus As Boolean = False
    Dim vardie4lockedstatus As Boolean = False
    Dim vardie5lockedstatus As Boolean = False
    Dim intTimesRolled As Integer
    Dim Chances As Integer
    Dim AcesScore As Integer = 0
    Dim twosScore As Integer = 0
    Dim threesScore As Integer = 0
    Dim foursScore As Integer = 0
    Dim fivesScore As Integer = 0
    Dim sixesScore As Integer = 0
    Dim upperhouseTotal As Integer = 0
    Dim lowerhousetotal As Integer = 0
    Dim randomnum1 As Integer = 0
    Dim randomnum2 As Integer = 0
    Dim randomnum3 As Integer = 0
    Dim randomnum4 As Integer = 0
    Dim randomnum5 As Integer = 0
    Dim LargeStraight(4) As Integer
    Dim username As String = Nothing
    Dim highscores As Integer
    '  ================================================repetetive comments are only made once===================================

    Public blnHasEnteredScore As Boolean = False


    Private Sub Form1_Load(sender As Object, e As EventArgs) Handles MyBase.Load
        tmrScoreTracker.Start()             'starts the scoretracker
        tmrYahtzeeBonus.Start()
    End Sub




    Public Sub CounterAce()

    End Sub




    Private Sub btnRoller_Click(sender As Object, e As EventArgs) Handles btnRoller.Click
        tmrTime.Start()
        tmrTime2.Start()
        tmrTimer3.Start()                          'starts all the timers for the dice'
        tmrTime4.Start()
        tmrTime5.Start()
        intTimesRolled = intTimesRolled + 1
        timesrolled.Text = intTimesRolled
        If btnAces.Enabled = False And btnTwos.Enabled = False And btnThrees.Enabled = False And btnFours.Enabled = False And btnFives.Enabled = False And btnSixes.Enabled = False And btn3ofKind.Enabled = False And btn4ofakind.Enabled = False And btnFullHouse.Enabled = False And btnSmallStraight.Enabled = False And btnLargeStraight.Enabled = False And btnYAHTZEE.Enabled = False And btnYahtzeeBonus.Enabled = False Then
            MsgBox("GG! Press End Game to Save")                                 'notices the user when game is finished
        End If
        If timesrolled.Text = 3 Then
            btnRoller.Enabled = False
            intTimesRolled = 0                                'counts rolling clicks
        End If
        If timesrolled.Text = 3 Then
            MsgBox("End turn! Pick a Score")               'ends turn after 3 rounds
        End If



    End Sub

    Private Sub btnHoldD1_Click(sender As Object, e As EventArgs) Handles btnHoldD1.Click
        If picDice1.BackColor = Color.Red Then
            picDice1.BackColor = Color.Transparent
        Else                                                      'changes backcolour when holding
            picDice1.BackColor = Color.Red
        End If

        If btnHoldD1.Text = "Hold" Then
            btnHoldD1.Text = "Free"                             'changing text when holding
        Else
            btnHoldD1.Text = "Hold"
        End If


        If picDice1.Enabled = False Then
            picDice1.Enabled = True
        End If

        If picDice1.Enabled = True Then
            picDice1.Enabled = False
        End If



        tmrTime.Stop()                            'stops timer for dice 1

        If vardie1lockedstatus = True Then
            vardie1lockedstatus = False
        Else                                               'holds the dice
            vardie1lockedstatus = True
        End If



    End Sub

    Private Sub btnHoldD2_Click(sender As Object, e As EventArgs) Handles btnHoldD2.Click                'same as dice1
        If picDice2.BackColor = Color.Red Then
            picDice2.BackColor = Color.Transparent
        Else
            picDice2.BackColor = Color.Red
        End If
        If btnHoldD2.Text = "Hold" Then
            btnHoldD2.Text = "Free"
        Else
            btnHoldD2.Text = "Hold"
        End If
        tmrTime2.Stop()

        If vardie2lockedstatus = True Then
            vardie2lockedstatus = False
        Else
            vardie2lockedstatus = True
        End If

    End Sub

    Private Sub btnHoldD3_Click(sender As Object, e As EventArgs) Handles btnHoldD3.Click                     'same as dice1
        If picDice3.BackColor = Color.Red Then
