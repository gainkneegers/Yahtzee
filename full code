                picDice4.Image = imlDice.Images.Item(dice1)
                picDice5.Image = imlDice.Images.Item(dice1)
                btn3ofKind.Enabled = False
                If timesrolled.Text = 3 Then
                    btnRoller.Enabled = False
                End If

            End If
        End If

    End Sub

    Private Sub btn4ofakind_Click(sender As Object, e As EventArgs) Handles btn4ofakind.Click
        If btnRoller.Enabled = False Then
            btnRoller.Enabled = True
        End If
        ' Identifying if there are any 4 of a kind combinations and if so giving score
        If lblDice1counter.Text = lblDice2counter.Text And lblDice2counter.Text = lblDice3counter.Text And lblDice3counter.Text = lblDice4counter.Text Then
            lbl4ofkindVALUE.Text = Val(lblDice1counter.Text) + Val(lblDice2counter.Text) + Val(lblDice3counter.Text) + Val(lblDice4counter.Text) + Val(lblDice5counter.Text)
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)
            MsgBox("Sucess! Next Round.")
            btn4ofakind.Enabled = False
            intTimesRolled = 0
            timesrolled.Text = 0
        ElseIf lblDice1counter.Text = lblDice2counter.Text And lblDice2counter.Text = lblDice3counter.Text And lblDice3counter.Text = lblDice5counter.Text Then
            lbl4ofkindVALUE.Text = Val(lblDice1counter.Text) + Val(lblDice2counter.Text) + Val(lblDice3counter.Text) + Val(lblDice4counter.Text) + Val(lblDice5counter.Text)
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)
            MsgBox("Sucess! Next Round.")
            btn4ofakind.Enabled = False
            intTimesRolled = 0
            timesrolled.Text = 0
        ElseIf lblDice1counter.Text = lblDice3counter.Text And lblDice3counter.Text = lblDice4counter.Text And lblDice4counter.Text = lblDice5counter.Text Then
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)
            MsgBox("Sucess! Next Round.")
            btn4ofakind.Enabled = False
            intTimesRolled = 0
            timesrolled.Text = 0
            lbl4ofkindVALUE.Text = Val(lblDice1counter.Text) + Val(lblDice2counter.Text) + Val(lblDice3counter.Text) + Val(lblDice4counter.Text) + Val(lblDice5counter.Text)
        ElseIf lblDice2counter.Text = lblDice3counter.Text And lblDice3counter.Text = lblDice4counter.Text And lblDice4counter.Text = lblDice5counter.Text Then
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)
            MsgBox("Sucess! Next Round.")
            btn4ofakind.Enabled = False
            intTimesRolled = 0
            timesrolled.Text = 0
            lbl4ofkindVALUE.Text = Val(lblDice1counter.Text) + Val(lblDice2counter.Text) + Val(lblDice3counter.Text) + Val(lblDice4counter.Text) + Val(lblDice5counter.Text)
        ElseIf lblDice1counter.Text = lblDice2counter.Text And lblDice2counter.Text = lblDice4counter.Text And lblDice4counter.Text = lblDice5counter.Text Then
            picDice1.Image = imlDice.Images.Item(dice1)
            picDice2.Image = imlDice.Images.Item(dice1)
            picDice3.Image = imlDice.Images.Item(dice1)
            picDice4.Image = imlDice.Images.Item(dice1)
            picDice5.Image = imlDice.Images.Item(dice1)
            MsgBox("Sucess! Next Round.")
            btn4ofakind.Enabled = False
            intTimesRolled = 0
            timesrolled.Text = 0
            lbl4ofkindVALUE.Text = Val(lblDice1counter.Text) + Val(lblDice2counter.Text) + Val(lblDice3counter.Text) + Val(lblDice4counter.Text) + Val(lblDice5counter.Text)
            If timesrolled.Text = 3 Then
                btnRoller.Enabled = False
            End If
        Else
            If MsgBox("This Will Give you 0 Points, Would you like to continue?", MessageBoxButtons.YesNo, MessageBoxIcon.Question) = MsgBoxResult.Yes Then
                MsgBox("NEXT TURN")
                picDice1.Image = imlDice.Images.Item(dice1)
                picDice2.Image = imlDice.Images.Item(dice1)
                picDice3.Image = imlDice.Images.Item(dice1)                       'if no 4 of a kind available then 0 points
                picDice4.Image = imlDice.Images.Item(dice1)
                picDice5.Image = imlDice.Images.Item(dice1)
                intTimesRolled = 0
                timesrolled.Text = 0
                btn4ofakind.Enabled = False
            End If
        End If

    End Sub

    Private Sub btnFullHouse_Click(sender As Object, e As EventArgs) Handles btnFullHouse.Click
        If btnRoller.Enabled = False Then
            btnRoller.Enabled = True
        End If
        ' same as others
